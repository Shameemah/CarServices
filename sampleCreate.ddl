CREATE TABLE employee (ID BIGINT AUTO_INCREMENT NOT NULL, FIRSTNAME VARCHAR(255), HIREDATE DATE, LASTNAME VARCHAR(255), ROLE VARCHAR(255), SALARY INTEGER, DEPARTMENT_ID VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE equipment (SERIALNUMBER BIGINT NOT NULL, BRANDNAME VARCHAR(255), CATEGORY VARCHAR(255), CHASSISNUMBER INTEGER, ENGINENUMBER INTEGER, MANUFACTUREDATE DATE, MODEL VARCHAR(255), ODOMETERREADING DOUBLE, PURCHASEDATE DATE, REGISTRATIONNUMBER INTEGER, TYPE VARCHAR(255), PRIMARY KEY (SERIALNUMBER))
CREATE TABLE maintenance (ID BIGINT AUTO_INCREMENT NOT NULL, BRANDNAME VARCHAR(255), DUEDATE DATE, MAINTENANCEDONE TINYINT(1) default 0, MODEL VARCHAR(255), REMINDERDATE DATE, EQUIPMENT_ID BIGINT, TOOL_ID BIGINT, PRIMARY KEY (ID))
CREATE TABLE department (DEPARTMENTID VARCHAR(255) NOT NULL, DEPARTMENTDESCRIPTION VARCHAR(255), DEPARTMENTNAME VARCHAR(255), PRIMARY KEY (DEPARTMENTID))
CREATE TABLE tool (SERIALNUMBER BIGINT NOT NULL, BRANDNAME VARCHAR(255), CATEGORY VARCHAR(255), MODEL VARCHAR(255), TYPE VARCHAR(255), PRIMARY KEY (SERIALNUMBER))
ALTER TABLE employee ADD CONSTRAINT FK_employee_DEPARTMENT_ID FOREIGN KEY (DEPARTMENT_ID) REFERENCES department (DEPARTMENTID)
ALTER TABLE maintenance ADD CONSTRAINT FK_maintenance_TOOL_ID FOREIGN KEY (TOOL_ID) REFERENCES tool (SERIALNUMBER)
ALTER TABLE maintenance ADD CONSTRAINT FK_maintenance_EQUIPMENT_ID FOREIGN KEY (EQUIPMENT_ID) REFERENCES equipment (SERIALNUMBER)
